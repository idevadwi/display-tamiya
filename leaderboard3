      transform: rotate(90deg); /* Change to 270deg if needed */
      transform-origin: center center;
      position: absolute;
      top: 50%;
      left: 50%;
      translate: -50% -50%;
    }

    video#bg-video {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      z-index: 0;
    }

    .overlay {
      position: absolute;
      width: 100%;
      text-align: center;
